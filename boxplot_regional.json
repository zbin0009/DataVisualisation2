{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Regional boxplot with appropriate scale",
  "data": {"url": "combined.csv"},
  "title": {"text": "Regional Distribution", "anchor": "start", "color": "#1e3a8a", "fontSize": 18, "fontWeight": 700},
  "transform": [
    {"calculate": "toNumber(datum.entries)", "as": "annual"},
    {"filter": "datum.type == 'Regional'"}
  ],
  "mark": {"type": "boxplot", "color": "#059669"},
  "encoding": {
    "y": {"field": "annual", "type": "quantitative", "title": "Annual Patronage", "axis": {"tickCount": 8}, "scale": {"domain": [0, 2000000]}},
    "tooltip": [
      {"field": "name", "title": "Station"},
      {"field": "annual", "title": "Annual Patronage", "format": ","}
    ]
  },
  "width": 300,
  "height": 300
}
