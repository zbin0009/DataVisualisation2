{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Melbourne Metro Network showing train lines and stations.",
  "width": "container",
  "height": 600,
  "projection": {
    "type": "mercator",
    "center": [144.9631, -37.8136],
    "scale": 20000
  },
  "layer": [
    {
      "data": {"sphere": true},
      "mark": {"type": "geoshape", "fill": "#f0f9ff", "stroke": "#bae6fd"}
    },
    {
      "data": {"url": "train_lines.geojson", "format": {"type": "geojson"}},
      "mark": {"type": "geoshape", "stroke": "#64748b", "strokeWidth": 1.5, "fill": null},
      "encoding": {
        "tooltip": [{"field": "LINE_NAME", "type": "nominal", "title": "Line"}]
      }
    },
    {
      "data": {"url": "metro.csv", "format": {"type": "csv"}},
      "transform": [
        {"calculate": "toNumber(datum.annual_entries)", "as": "annual_entries_num"},
        {
          "calculate": "if(datum.annual_entries_num > 10000000, 'Major Hub', if(datum.annual_entries_num > 5000000, 'Major Station', if(datum.annual_entries_num > 1000000, 'Busy Station', 'Regular Station')))",
          "as": "station_type"
        },
        {"filter": "isValid(datum.latitude) && isValid(datum.longitude)"}
      ],
      "mark": {"type": "circle", "stroke": "white", "strokeWidth": 1.5, "opacity": 0.9},
      "encoding": {
        "longitude": {"field": "longitude", "type": "quantitative"},
        "latitude": {"field": "latitude", "type": "quantitative"},
        "size": {
          "field": "annual_entries_num",
          "type": "quantitative",
          "scale": {"range": [20, 500]},
          "title": "Annual Entries"
        },
        "color": {
          "field": "station_type",
          "type": "nominal",
          "scale": {
            "range": ["#dc2626", "#f97316", "#3b82f6", "#16a34a"],
            "domain": ["Major Hub", "Major Station", "Busy Station", "Regular Station"]
          }
        },
        "tooltip": [
          {"field": "station_name", "title": "Station"},
          {"field": "annual_entries_num", "title": "Annual Entries", "format": ","},
          {"field": "station_type", "title": "Category"}
        ]
      }
    },
    {
      "data": {"url": "metro.csv", "format": {"type": "csv"}},
      "mark": {"type": "text", "dx": 8, "dy": -6, "fontSize": 9, "fontWeight": "bold", "color": "#1e293b"},
      "encoding": {
        "longitude": {"field": "longitude", "type": "quantitative"},
        "latitude": {"field": "latitude", "type": "quantitative"},
        "text": {"field": "station_name", "type": "nominal"},
        "opacity": {
          "condition": {"test": "datum.annual_entries > 3000000", "value": 1},
          "value": 0
        }
      }
    }
  ],
  "config": {
    "view": {"stroke": "transparent"}
  }
}
