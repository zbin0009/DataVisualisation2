{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Top 10 Regional Stations Bar Chart",
  "data": {"url": "regional.csv"},
  "title": {
    "text": "Top 10 Regional Stations",
    "color": "#1e3a8a",
    "fontSize": 18,
    "fontWeight": 700
  },
  "transform": [
    {"calculate": "toNumber(datum.Pax_annual)", "as": "numeric_pax"},
    {"window": [{"op": "rank", "as": "rank", "sort": {"field": "numeric_pax", "order": "descending"}}]},
    {"filter": "datum.rank <= 10"}
  ],
  "mark": {"type": "bar", "stroke": "white", "strokeWidth": 1},
  "encoding": {
    "x": {"field": "numeric_pax", "type": "quantitative", "title": "Annual Patronage"},
    "y": {"field": "Stop_name", "type": "nominal", "title": "Regional Station", "sort": {"field": "numeric_pax", "order": "descending"}},
    "color": {"field": "numeric_pax", "type": "quantitative", "scale": {"scheme": "greens"}},
    "tooltip": [
      {"field": "Stop_name", "type": "nominal", "title": "Station"},
      {"field": "numeric_pax", "type": "quantitative", "format": ",.0f", "title": "Annual Patronage"}
    ]
  },
  "width": "container",
  "height": 380
}
