{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Distribution of patronage for Metro and Regional stations",
  "data": { "url": "combined.csv", "format": { "type": "csv" } },
  "width": "container",
  "height": 380,
  "mark": { "type": "bar", "opacity": 0.8 },
  "encoding": {
    "x": {
      "bin": { "maxbins": 20 },
      "field": "entries",
      "type": "quantitative",
      "title": "Annual Patronage"
    },
    "y": { "aggregate": "count", "title": "Number of Stations" },
    "color": {
      "field": "type",
      "type": "nominal",
      "scale": { "range": ["#2563eb", "#16a34a"] },
      "title": "Station Type"
    },
    "tooltip": [
      { "aggregate": "count", "title": "Stations in Bin" },
      { "field": "type", "title": "Type" }
    ]
  },
  "config": { "view": { "stroke": "transparent" } }
}
