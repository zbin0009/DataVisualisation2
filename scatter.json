{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Distance from CBD vs Patronage with clean gridlines and smooth log scale.",
  "data": {
    "url": "combined.csv",
    "format": {"type": "csv"}
  },
  "transform": [
    {
      "calculate": "datum.annual_entries ? toNumber(datum.annual_entries) : toNumber(datum.Pax_annual)",
      "as": "patronage"
    },
    {
      "calculate": "datum.annual_entries ? 'Metro' : 'Regional'",
      "as": "type"
    },
    {
      "calculate": "sqrt(pow(toNumber(datum.latitude || datum.Stop_lat) - (-37.8136), 2) + pow(toNumber(datum.longitude || datum.Stop_long) - (144.9631), 2)) * 111",
      "as": "distance_km"
    }
  ],
  "width": "container",
  "height": 400,
  "layer": [
    {
      "mark": {"type": "circle", "filled": true, "opacity": 0.7, "stroke": "white", "strokeWidth": 0.5},
      "encoding": {
        "x": {
          "field": "distance_km",
          "type": "quantitative",
          "title": "Distance from Melbourne CBD (km)",
          "axis": {
            "grid": true,
            "gridColor": "#e5e7eb",
            "gridOpacity": 0.6,
            "tickCount": 10,
            "labelFontSize": 12,
            "titleFontSize": 13
          }
        },
        "y": {
          "field": "patronage",
          "type": "quantitative",
          "title": "Annual Patronage (log scale)",
          "scale": {"type": "log"},
          "axis": {
            "grid": true,
            "gridColor": "#e5e7eb",
            "gridOpacity": 0.6,
            "values": [100, 1000, 10000, 100000, 1000000, 10000000],
            "format": "s",
            "labelFontSize": 12,
            "titleFontSize": 13
          }
        },
        "color": {
          "field": "type",
          "type": "nominal",
          "title": "Station Type",
          "scale": {"range": ["#2563eb", "#16a34a"]}
        },
        "tooltip": [
          {"field": "Stop_name", "title": "Station"},
          {"field": "distance_km", "title": "Distance (km)", "format": ".1f"},
          {"field": "patronage", "title": "Annual Patronage", "format": ","}
        ]
      }
    },
    {
      "transform": [{"regression": "patronage", "on": "distance_km", "groupby": ["type"]}],
      "mark": {"type": "line", "strokeWidth": 2, "opacity": 0.9},
      "encoding": {
        "x": {"field": "distance_km", "type": "quantitative"},
        "y": {"field": "patronage", "type": "quantitative"},
        "color": {
          "field": "type",
          "scale": {"range": ["#1d4ed8", "#15803d"]},
          "legend": null
        }
      }
    }
  ],
  "config": {
    "view": {"stroke": "transparent"},
    "axis": {"domain": false}
  }
}
